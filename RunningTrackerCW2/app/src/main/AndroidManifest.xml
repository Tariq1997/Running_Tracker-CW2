<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.khfy6tme.runningtracker">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.example.khfy6tme.runningtracker.MainActivity" android:configChanges="orientation" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.example.khfy6tme.runningtracker.utilities.MyContentProvider"
            android:authorities="com.example.khfy6tme.runningtracker.utilities.MyContentProvider"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="com.example.khfy6tme.runningtracker.utilities.TrackingService"
            android:enabled="true" />

        <activity android:name="com.example.khfy6tme.runningtracker.RunningLogActivity" android:configChanges="orientation" android:screenOrientation="portrait"/>
        <activity android:name="com.example.khfy6tme.runningtracker.StatsActivity" android:configChanges="orientation" android:screenOrientation="portrait"></activity>
    </application>

</manifest>